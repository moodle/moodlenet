{
  "name": "moodlenet-dev",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "description": "MoodleNet monorepo system",
  "author": "https://github.com/aleclofabbro",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.0",
    "husky-init": "^8.0.0",
    "lerna": "^5.0.0",
    "lerna-dependency-graph": "^1.1.0",
    "lint-staged": "^13.0.3",
    "node-dev": "^7.4.3",
    "npm-watch": "^0.11.0",
    "pm2": "^5.2.2",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "storybook-addon-state": "^1.0.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.2",
    "vscode-generate-index-standalone": "^1.6.0"
  },
  "scripts": {
    "postinstall": "npm run prj-init",
    "prj-init": "npm run prj-husky-init && npm run prj-bs",
    "prj-husky-init": "rimraf .husky && husky install && npx husky add .husky/pre-commit \"npm run pre-commit\"",
    "prj-bs": "lerna bootstrap",
    "dev-assistant": "lerna run dev-assistant --parallel --stream --",
    "pkg-pre-build": "lerna run tsc-build --no-bail",
    "dev-tsc-watch": "tsc-watch --build --onCompilationComplete \"lerna run --parallel tsc-complete\" --onCompilationStarted \"lerna run --parallel tsc-started\" --onFailure \"lerna run --parallel tsc-failure\" --onFirstSuccess \"lerna run --parallel tsc-firstsuccess\" --onSuccess \"lerna run --parallel tsc-success\"",
    "dev-install-backend": "node bin/install.mjs",
    "dev-start-backend": "node bin/boot.mjs",
    "dev-start-webapp": "node bin/dev-webapp.mjs",
    "prj-cleanup-all": "npm run pkg-cleanup-all && rimraf .husky && rimraf package-lock-json && rimraf yarn.lock && rimraf node_modules",
    "pkg-cleanup-all": "lerna run cleanup-all --parallel",
    "prj-cleanup-build": "lerna run cleanup-build  --parallel",
    "dep-graph": "lerna-dependency-graph -f jpg -o dependency-graph.jpg && lerna-dependency-graph -o dependency-graph.dot",
    "pre-commit": "lint-staged",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --check --ignore-path .gitignore \"**/*.+(json|ts|tsx)\""
  }
}
