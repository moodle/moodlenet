{
  "name": "moodlenet",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "description": "MoodleNet monorepo system",
  "author": "https://github.com/aleclofabbro",
  "dependencies": {},
  "devDependencies": {
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^7.11.0",
    "husky": "^7.0.0",
    "lerna": "^5.0.0",
    "lerna-dependency-graph": "^1.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "ibs": "husky install && yarn bs",
    "bs": "lerna bootstrap",
    "setup": "lerna run setup --parallel --stream",
    "start-dev": "lerna run start-dev --parallel --stream -- -- ",
    "build": "lerna run build --stream",
    "clean-lib-dirs": "rimraf packages/*/lib/*",
    "clean-node_modules": "rimraf packages/*/node_modules",
    "clean-dirs": "yarn clean-node_modules && yarn clean-lib-dirs",
    "clean-bs": "yarn clean-dirs && yarn bs",
    "start": "lerna run start --parallel --stream",
    "test": "",
    "dep-graph": "lerna-dependency-graph -f jpg -o dependency-graph.jpg && lerna-dependency-graph -o dependency-graph.dot",
    "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": "*.gen.*",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}
