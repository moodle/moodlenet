{
  "name": "moodlenet-dev",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "description": "MoodleNet monorepo system",
  "author": "https://github.com/aleclofabbro",
  "type": "module",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": "please-use-npm"
  },
  "devDependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.0",
    "husky-init": "^8.0.0",
    "lerna": "^5.0.0",
    "lerna-dependency-graph": "^1.1.0",
    "lint-staged": "^13.0.3",
    "node-dev": "^7.4.3",
    "npm-watch": "^0.11.0",
    "pm2": "^5.2.2",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "storybook-addon-state": "^1.0.3",
    "typescript": "^4.7.2",
    "vscode-generate-index-standalone": "^1.6.0"
  },
  "scripts": {
    "postinstall": "npm run prj-init",
    "prj-init": "npm run prj-husky-init && npm run prj-bs && lerna run dev-init --parallel --stream && npm run prj-build",
    "prj-husky-init": "rimraf .husky && husky install && husky add .husky/pre-commit \"npm run pre-commit\"",
    "prj-bs": "lerna bootstrap",
    "dev-assistant": "lerna run dev-assistant --parallel --stream --",
    "prj-build": "tsc --build ./packages/arangodb ./packages/authentication-manager ./packages/component-library ./packages/content-graph ./packages/core ./packages/crypto ./packages/email-service ./packages/extensions-manager ./packages/http-server ./packages/key-value-store ./packages/organization ./packages/react-app ./packages/simple-email-auth ./packages/web-user",
    "prj-build-watch": "npm run prj-build -- --watch",
    "dev-install-backend": "node bin/install.mjs",
    "dev-start-backend": "node bin/boot.mjs",
    "dev-start-webapp": "node bin/dev-webapp.mjs",
    "prj-cleanup-all": "npm run pkg-cleanup-all && rimraf .husky && rimraf node_modules",
    "pkg-cleanup-all": "npm run prj-cleanup-build && lerna run cleanup-all --parallel && rimraf tsconfig.tsbuildinfo && rimraf packages/*/tsconfig.tsbuildinfo && rimraf packages/*/node_modules",
    "prj-cleanup-build": "lerna run cleanup-build --parallel && rimraf packages/*/dist && rimraf packages/*/tsconfig.tsbuildinfo",
    "dep-graph": "lerna-dependency-graph -f jpg -o dependency-graph.jpg && lerna-dependency-graph -o dependency-graph.dot",
    "pre-commit": "lint-staged",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --check --ignore-path .gitignore \"**/*.+(json|ts|tsx)\""
  }
}
