      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "authentication-manager dev-build"
      // "dependsOn": ["core dev-build"]
    },
    {
      "type": "typescript",
      "tsconfig": "packages/dev-machine/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "dev-machine dev-build"
      // "dependsOn": ["core dev-build"]
    },
    {
      "type": "typescript",
      "tsconfig": "packages/arangodb/tsconfig.json",
