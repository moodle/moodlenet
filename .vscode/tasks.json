{
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "command": "yarn",
      "args": ["build-all-watch"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "label": "build-all-watch"
    },
    {
      "group": "build",
      "command": "yarn",
      "args": ["dev-assistant"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "label": "dev-assistant"
    },
    {
      "group": "build",
      "problemMatcher": [],
      "label": "frontend-tasks",
      "dependsOrder": "parallel",
      "dependsOn": [
        "react-app dev-build",
        "simple-email-auth dev-build",
        "web-user dev-build",
        "component-library dev-build",
        "extensions-manager dev-build",
        "dev-assistant",
        "storybook"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
