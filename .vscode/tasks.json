{
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "problemMatcher": [],
      "label": "dev-tasks",
      "dependsOrder": "parallel",
      "dependsOn": [
        "dev-machine dev-build",
        "http-server dev-build",
        "react-app dev-build",
        "core dev-build",
        "arangodb dev-build",
        "test-extension dev-build",
        "authentication-manager dev-build",
        "extensions-manager dev-build"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "type": "typescript",
      "tsconfig": "packages/extensions-manager/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "extensions-manager dev-build"
      // "dependsOn": ["core dev-build"]
    },
    {
