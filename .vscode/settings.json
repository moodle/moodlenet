{
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/dist": false
  },
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.alwaysShowStatus": true,
  "eslint.enable": true,
  "eslint.format.enable": true,
  // "eslint.lintTask.enable": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "todo-tree.tree.showBadges": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "CHECK",
    "BEWARE",
    "NOTE",
    "TODO",
    "@ALE",
    "@BRU",
    // "@NEW_USER",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug"
    },
    "HACK": {
      "icon": "tools"
    },
    "FIXME": {
      "icon": "flame"
    },
    "XXX": {
      "icon": "x"
    },
    "[ ]": {
      "icon": "issue-draft"
    },
    "[x]": {
      "icon": "issue-closed"
    },
    "@ALE": {
      "icon": "dependabot",
      "iconColour": "#0080ff",
      "foreground": "#fff",
      "background": "#0081ffe6",
      "borderRadius": "2px"
    },
    "@BRU": {
      "icon": "dependabot",
      "iconColour": "#00a979",
      "foreground": "#fff",
      "background": "#00a97ae6"
    }
    // "@NEW_USER": {
    //   "icon": "dependabot",
    //   "iconColour": "#ff9900",
    //   "foreground": "#ffffff",
    //   "background": "#ff9900e6"
    // },
  },
  "vsicons.associations.files": [
    { "extensions": ["reducer.mts"], "icon": "reducer", "format": "png" },
    { "extensions": ["ui-states-actions.mts"], "icon": "states_actions", "format": "png" },
    { "extensions": ["types.mts"], "icon": "ts_types", "format": "png" },
    { "extensions": ["worker.mts"], "icon": "worker", "format": "png" }
  ],
  "vsicons.associations.folders": [
    { "extensions": ["common"], "icon": "api", "format": "FileFormat.svg" },
    { "extensions": ["webapp"], "icon": "aurelia", "format": "FileFormat.svg" },
    { "extensions": ["resources"], "icon": "component", "format": "FileFormat.svg" },
    { "extensions": ["server"], "icon": "docker", "format": "FileFormat.svg" },
    { "extensions": ["validation"], "icon": "log", "format": "FileFormat.svg" }
  ]
}
// https://github.com/microsoft/vscode-eslint/issues/91
