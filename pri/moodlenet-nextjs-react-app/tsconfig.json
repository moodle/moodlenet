{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // these below taken for testing from a fresh create-next-app
    // "module": "esnext",
    // "moduleResolution": "bundler",
    // "lib": [
    //   "dom",
    //   "dom.iterable",
    //   "esnext"
    // ],
    // "skipLibCheck": true,
    // these above taken for testing from a fresh create-next-app

    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    // much faster without belows, but they were auto-generated  ðŸ¤”,
    // "../../pri/moodlenet-nextjs-react-app/.next/types/**/*.ts",
    // "../../dist/pri/moodlenet-nextjs-react-app/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["zz__legacy", "ui-cmps", "node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
