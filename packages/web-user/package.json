{
  "name": "@moodlenet/web-user",
  "version": "0.2.0",
  "author": "MoodleNet",
  "moodlenet": {
    "displayName": "Profile page",
    "icon": "https://moodle.net/moodlenet-logo-small.svg"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/moodlenet/moodlenet/-/tree/moodlenet3-dev/packages/component-library"
  },
  "keywords": [
    "moodlenetPackage"
  ],
  "description": "Page to display user public information",
  "license": "AGPL-3.0",
  "type": "module",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": "please-use-npm"
  },
  "readme": "",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "formik": "^2.2.9",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "@moodlenet/authentication-manager": "^0.2.0",
    "@moodlenet/component-library": "^0.2.0",
    "@moodlenet/content-graph": "^0.2.0",
    "@moodlenet/core": "^0.2.0",
    "@moodlenet/react-app": "^0.2.0"
  },
  "devDependencies": {
    "@lingui/macro": "^3.14.0",
    "@moodlenet/authentication-manager": "^0.2.0",
    "@moodlenet/component-library": "^0.2.0",
    "@moodlenet/content-graph": "^0.2.0",
    "@moodlenet/core": "^0.2.0",
    "@moodlenet/react-app": "^0.2.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "dev-assistant": "npm-watch copy-assets & npm-watch create-components-index & npm-watch create-stories-index",
    "dev-init": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.{scss,png,svg,json} dist",
    "create-components-index": "vgis src/webapp/ui.mts",
    "create-stories-index": "vgis src/webapp/stories.mts"
  },
  "watch": {
    "create-stories-index": {
      "patterns": [
        "src/webapp/stories.mts",
        "src/webapp/**/*.stories.tsx"
      ],
      "extensions": ".ts,.tsx,.mts",
      "delay": 300
    },
    "create-components-index": {
      "patterns": [
        "src/webapp/**/*"
      ],
      "extensions": ".ts,.tsx,.mts",
      "delay": 300
    },
    "copy-assets": {
      "patterns": [
        "src/**/*"
      ],
      "extensions": ".scss,.png,.svg,.json",
      "ignore": "**/*.*ts*",
      "delay": 300
    }
  },
  "exports": {
    ".": "./dist/root-export.mjs",
    "./init": "./dist/server/init.mjs",
    "./ui": "./dist/webapp/ui.mjs",
    "./stories": "./dist/webapp/stories.mjs"
  }
}
