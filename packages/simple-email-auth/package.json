{
  "name": "@moodlenet/simple-email-auth",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "main": "lib/main.mjs",
  "moodlenet": {
    "creator": "MoodleNet",
    "displayName": "Email authentication"
  },
  "keywords": [
    "moodlenetPackage"
  ],
  "description": "Email authentication\nBasic authentication using email and password",
  "files": [
    "lib/",
    "src/"
  ],
  "exports": {
    "./ui": "./lib/webapp/ui.mjs"
  },
  "repository": "https://gitlab.com/moodlenet/moodlenet",
  "author": "https://github.com/aleclofabbro",
  "peerDependencies": {
    "@moodlenet/component-library": "^0.1.0",
    "@moodlenet/arangodb": "^0.1.0",
    "@moodlenet/authentication-manager": "^0.1.0",
    "@moodlenet/content-graph": "^0.1.0",
    "@moodlenet/core": "^0.1.0",
    "@moodlenet/crypto": "^0.1.0",
    "@moodlenet/email-service": "^0.1.0",
    "@moodlenet/http-server": "^0.1.0",
    "@moodlenet/react-app": "^0.1.0",
    "@moodlenet/web-user": "^0.1.0"
  },
  "devDependencies": {
    "@moodlenet/component-library": "^0.1.0",
    "@moodlenet/arangodb": "^0.1.0",
    "@moodlenet/authentication-manager": "^0.1.0",
    "@moodlenet/content-graph": "^0.1.0",
    "@moodlenet/core": "^0.1.0",
    "@moodlenet/crypto": "^0.1.0",
    "@moodlenet/email-service": "^0.1.0",
    "@moodlenet/http-server": "^0.1.0",
    "@moodlenet/react-app": "^0.1.0",
    "@moodlenet/web-user": "^0.1.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "dev-assistant": "npm-watch copy-assets & npm-watch create-components-index",
    "copy-assets": "copyfiles -u 1 src/**/*.{scss,png,svg,json} lib",
    "create-components-index": "vgis src/webapp/ui.mts"
  },
  "watch": {
    "create-components-index": {
      "patterns": [
        "src/webapp/**/*"
      ],
      "extensions": ".ts,.tsx,.mts",
      "delay": 300
    },
    "copy-assets": {
      "patterns": [
        "src/**/*"
      ],
      "extensions": ".scss,.png,.svg,.json",
      "ignore": "**/*.*ts*",
      "delay": 300
    }
  }
}
