{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src"
  },

  "include": [
    "src",
    "src/lib/SBLinkComponent.tsx",
    "../ed-meta/src/webapp/components/molecules/fields/ResourceData.stories.tsx"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    {
      "path": "../ed-resource"
    },
    {
      "path": "../web-user"
    },
    {
      "path": "../extensions-manager"
    },
    {
      "path": "../component-library"
    },
    {
      "path": "../passport-auth"
    },
    {
      "path": "../simple-email-auth"
    },
    {
      "path": "../ed-meta"
    },
    {
      "path": "../collection"
    },
    {
      "path": "../react-app"
    }
  ],
  "paths": {
    "@/*": ["src/*"]
  }
}
